{
  "name": "dice-similarity-coeff",
  "version": "1.1.1",
  "description": "Find similarity between two strings, based on Dice Similarity Coefficient DSC",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start": "node index.js",
    "commit": "git-cz",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint --fix . --ext .js",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css)\"",
    "release": "npx -p @semantic-release/changelog -p @semantic-release/git -p semantic-release semantic-release  --no-ci --debug"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/selmi-karim/dice-similarity-coeff.git"
  },
  "keywords": [
    "string",
    "string-matching",
    "similarity",
    "string-similarity",
    "string-compare",
    "dice",
    "dice-similarity",
    "javascript",
    "rn-strings-filter",
    "rn-string-matching",
    "rn-strig-compare",
    "react-native"
  ],
  "author": "kerim selmi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/selmi-karim/dice-similarity-coeff/issues"
  },
  "homepage": "https://github.com/selmi-karim/dice-similarity-coeff#readme",
  "devDependencies": {
    "jest": "^26.0.1",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "prettier": "^2.0.4",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "semantic-release": "^19.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix && npm run format",
      "pre-push": "npm run lint && npm run format",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release": {
    "branches": [
      "master",
      "develop"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
